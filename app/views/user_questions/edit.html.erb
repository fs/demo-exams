<h1>UserQuestions</h1>
<div class="question">
  <p>
    <%= @user_question.question.question %>
  </p>

  <% form_for @user_question do |form| %>

    <% (1..5).each do |i| %>
      <p>
        <% if @user_question.question.single? %>
          <%= radio_button_tag('answers[]', i, false, :id => "answers_#{i}") %>
        <% else %>
          <%= check_box_tag('answers[]', i, false, :id => "answers_#{i}") %>
        <% end %>

        <%= @user_question.question.send("answer_#{i}".to_sym) %>
      </p>
    <% end %>

    <%= form.submit 'Answer', :disable_with => 'Please wait...' %>
    <% unless @next_question.blank? %>
      or <%= link_to 'Skip question', edit_user_question_path(@next_question) %>
    <% end %>
  <% end %>

</div>